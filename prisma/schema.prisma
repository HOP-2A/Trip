generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(nanoid())
  name     String
  email    String @unique
  clerkId  String @unique
  imageUrl String?
  customTrips       CustomTrip[]     @relation("CustomTripCreator")
  joinedTrips       TripPlanMember[]
  customTripMembers TripMember[]
  tripComment       TripComment[]
  invitedMembers    InvitedMember[]
}

model TripComment {
  id         String    @id @default(nanoid())
  comment    String
  userId     String?
  tripPlanId String?
  user       User?     @relation(fields: [userId], references: [id])
  tripPlan   TripPlan? @relation(fields: [tripPlanId], references: [id])
}

model CustomTrip {
  id          String    @id @default(nanoid())
  destination String
  startDate   DateTime?
  endDate     DateTime?
  peopleCount Int?
  images      String[]
  duration    Int?

  createdById String?
  createdBy   User?    @relation("CustomTripCreator", fields: [createdById], references: [id])
  createdAt   DateTime @default(now())

  days           CustomTripDay[]
  members        TripMember[]
  invitedMembers InvitedMember[]
}

model TripMember {
  id           String @id @default(nanoid())
  userId       String
  customTripId String
  role         String @default("member")

  user       User       @relation(fields: [userId], references: [id])
  customTrip CustomTrip @relation(fields: [customTripId], references: [id])

  @@unique([userId, customTripId])
}
model InvitedMember {
  id            String @id @default(nanoid())
  userId        String
  customTripId  String
  invitedUserId String

  user       User       @relation(fields: [userId], references: [id])
  customTrip CustomTrip @relation(fields: [customTripId], references: [id])
}

model TripPlan {
  id          String    @id @default(nanoid())
  title       String    @unique
  destination String
  startDate   DateTime?
  endDate     DateTime?
  images      String[]

  createdAt DateTime @default(now())

  days        TripDay[]
  members     TripPlanMember[]
  tripComment TripComment[]
}

model TripPlanMember {
  id         String @id @default(nanoid())
  userId     String
  tripPlanId String
  role       String @default("member")

  user     User     @relation(fields: [userId], references: [id])
  tripPlan TripPlan @relation(fields: [tripPlanId], references: [id])

  @@unique([userId, tripPlanId])
}

model CustomTripDay {
  id           String  @id @default(nanoid())
  customTripId String
  dayNumber    Int
  title        String?
  description  String?

  customTrip CustomTrip @relation(fields: [customTripId], references: [id])
}

model TripDay {
  id          String  @id @default(nanoid())
  tripPlanId  String
  dayNumber   Int
  title       String?
  description String?

  tripPlan TripPlan @relation(fields: [tripPlanId], references: [id])
}

model Fact {
  id          String              @id @default(nanoid())
  destination String
  description String
  currency    String
  visa        String
  language    String
  food        mustEatFood[]
  place       mustVisitLocation[]
}

model mustEatFood {
  id          String   @id @default(nanoid())
  title       String
  description String
  images      String[]
  fact        Fact?    @relation(fields: [factId], references: [id])
  factId      String?
}

model mustVisitLocation {
  id          String   @id @default(nanoid())
  title       String
  description String
  images      String[]
  fact        Fact?    @relation(fields: [factId], references: [id])
  factId      String?
}
