generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String  @id @default(nanoid())
  name           String
  email          String  @unique
  password       String
  profilePicture String?

  createdGroups TravelGroup[] @relation("GroupCreator")
  memberships   GroupMember[]

  createdAt DateTime @default(now())
}

model TravelGroup {
  id          String   @id @default(nanoid())
  title       String
  description String?
  country     String
  createdAt   DateTime @default(now())

  creatorId String
  creator   User   @relation("GroupCreator", fields: [creatorId], references: [id])

  members GroupMember[]

  tripPlan TripPlan?
}

model GroupMember {
  id       String   @id @default(nanoid())
  joinedAt DateTime @default(now())

  userId  String
  groupId String

  user  User        @relation(fields: [userId], references: [id])
  group TravelGroup @relation(fields: [groupId], references: [id])

  @@unique([userId, groupId])
}

model TripPlan {
  id        String   @id @default(nanoid())
  totalDays Int
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())

  groupId String      @unique
  group   TravelGroup @relation(fields: [groupId], references: [id])

  dailyPlan TripActivity[]
}

model TripActivity {
  id        String   @id @default(nanoid())
  dayNumber Int
  activity  String
  notes     String?
  createdAt DateTime @default(now())

  tripPlanId String
  tripPlan   TripPlan @relation(fields: [tripPlanId], references: [id])
}
