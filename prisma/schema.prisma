generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(nanoid())
  name     String?
  email    String  @unique
  password String

  customTrips CustomTrip[]
  trips       TripPlan[]
  tripMembers TripMember[]
}

model CustomTrip {
  id          String    @id @default(nanoid())
  title       String
  destination String
  startDate   DateTime?
  endDate     DateTime?
  peopleCount Int?
  images      String[]

  createdById String?
  createdBy   User?    @relation(fields: [createdById], references: [id])
  createdAt   DateTime @default(now())

  days    CustomTripDay[]
  members TripMember[]
}

model TripMember {
  id     String @id @default(nanoid())
  userId String
  role   String @default("member")

  user         User       @relation(fields: [userId], references: [id])
  customTrip   CustomTrip @relation(fields: [customTripId], references: [id])
  customTripId String

  @@unique([userId, customTripId])
}

model CustomTripDay {
  id           String  @id @default(nanoid())
  customTripId String
  dayNumber    Int
  title        String?
  description  String?

  activities CustomTripActivity[]
  customTrip CustomTrip           @relation(fields: [customTripId], references: [id])
}

model CustomTripActivity {
  id    String  @id @default(nanoid())
  time  String?
  title String
  notes String?
  dayId String

  day CustomTripDay @relation(fields: [dayId], references: [id])
}

model TripPlan {
  id          String    @id @default(nanoid())
  title       String    @unique
  destination String
  startDate   DateTime?
  endDate     DateTime?
  days        TripDay[]

  images String[]

  createdAt DateTime @default(now())
  user      User?    @relation(fields: [traveler], references: [id])
  traveler  String?
}

model TripDay {
  id          String  @id @default(nanoid())
  dayNumber   Int
  title       String?
  description String?

  activities TripActivity[]
  tripPlan   TripPlan?      @relation(fields: [tripPlanId], references: [id])
  tripPlanId String?
}

model TripActivity {
  id        String  @id @default(nanoid())
  dayNumber Int
  time      String?
  title     String
  notes     String?

  tripDay   TripDay? @relation(fields: [tripDayId], references: [id])
  tripDayId String?
}
